{% extends 'template/website/website.partial.twig' %}
{% block title %}
    {{ lang('email')['title'] }}
{% endblock %}

{% block content %}
    <main>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ lang('email')['heading'] }}</h1>
            </div>

            <div class="col-md-8">
                <h2>{{ lang('email')['subheading'] }}</h2>
                <p>{{ lang('email')['p1'] }}</p>
                <p><strong>{{ lang('email')['p2'] }}</strong></p>
                <p>{{ lang('email')['call-to-email'] | raw }}</p>

                <h3>{{ lang('email')['something-else'] }}</h3>
                <p>{{ lang('email')['something-else-text'] | raw }}</p>
            </div>
            <div class="col-md-4">
                <img src="{{ base_url }}/img/email.jpg"
                     alt="{{ lang('email')['image-alt'] }}"
                     class="img-responsive img-rounded"
                >
            </div>
        </div>

        <ol class="breadcrumb">
            <li><a href="{{ base_url }}/home">{{ lang('nav')['home'] }}</a></li>
            <li class="active">{{ lang('nav')['email'] }}</li>
        </ol>
    </main>
{% endblock %}
